    gateway:
      routes:
        - id: EMPOLOYEE-SERVER 
          uri: lb://EMPOLOYEE-SERVER 
          predicates:
            - Path=/Employeeservices/**        
        - id: DEPARTMENT-SERVER 
          uri: lb://DEPARTMENT-SERVER 
          predicates:
            - Path=/department/**
         